.startBodyWrapper{
	width:100%;
	height: 100% !important;
	background-image: url('Page 1_bkgrnd.jpg');
	position: relative;
}
.startAlignButtonWrapper{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color:#fff;
}

.startPageButtonWrapper{
	width: 192px;
	height: 192px;
	background: #ff0000;
	-moz-border-radius: 95px;
	-webkit-border-radius: 95px;
	border-radius: 95px;
	position: relative;
	box-shadow: 5px 5px 20px #000
}


.startPageButton{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color:#fff;
	text-decoration: none;
	font-weight: bold;
	font-size: 54px;
	line-height: 48px;
	text-align: center;

}
.keepGoingButtonWrapper{
	position:relative;
	height:100px;
	width:100px;
	-moz-border-radius: 50px;
	-webkit-border-radius: 50px;
	border-radius: 50px;
	text-align: center;
	box-shadow: 5px 5px 20px #000;
	display: inline-block;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
	border: 3px solid red;
}

.keepGoingButtonWrapper .keepGoingButton{
	position:absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color:#fff ;
	text-decoration: none;

}
.keepGoingButtonWrapper .keepGoingButton a{
	color:#fff;
	text-decoration: none;
	
}
