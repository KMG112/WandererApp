html{
	height:100%;
	font-family: "Caslon Pro", Courier, serif;
}
body{height: 100%}
.startBodyWrapper{
	position: relative;
	width:100%;
	height: 100%;
	background-image: url('Page 1_bkgrnd.jpg');
}
.startAlignButtonWrapper{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color:#fff;
}

.startPageButtonWrapper{
	width: 192px;
	height: 192px;
	background: #ff0000;
	-moz-border-radius: 95px;
	-webkit-border-radius: 95px;
	border-radius: 95px;
	position: relative;
	box-shadow: 5px 5px 20px #000
}


.startPageButton{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color:#fff;
	text-decoration: none;
	font-weight: bold;
	font-size: 54px;
	line-height: 48px;
	text-align: center;
}