<div class="listBody">
<ul >
  <% @chapters.reverse.each do |chapter| %>
    <li>
    	<div class="listContent">
    		<%= chapter.content %>
    	</div>
      <div class="listButton">
      	<%= button_to "Delete", chapter_path(chapter.id),method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
</ul>

</div>